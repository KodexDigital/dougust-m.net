<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewData["Title"] | DOUGUST-M</title>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400&display=swap" rel="stylesheet">
	@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<link href="~/css/style.css" rel="stylesheet" />
	<!-- Template CSS -->
	<link href="~/css/style-starter.css" rel="stylesheet" />
</head>
<body>
	<!-- site header -->
	<header id="site-header" class="fixed-top">
		<nav class="navbar navbar-expand-lg navbar-dark">
			<a class="navbar-brand" asp-controller="Home" asp-action="Index">
				<span class="fa fa-shield"></span> DOUGUST-M
			</a>
			<button class="navbar-toggler bg-gradient" type="button" data-toggle="collapse"
					data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
					aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav m-auto nav navbar-nav navbar-right cl-effect-14">
					<li class="nav-item active">
						<a class="nav-link" asp-controller="Home" asp-action="Index"><span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="AboutUs">About us</a>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link" dropdown-toggle id="dropdownMenuServices" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button"
						   asp-controller="Services" asp-action="Index">
						Services<span class="caret"></span></a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuServices">
							<a asp-controller="Services" asp-action="Index" class="dropdown-item">All services</a>
							<a asp-controller="Services" asp-action="Engineering" class="dropdown-item">Engineering</a>
							<a asp-controller="Services" asp-action="Construction" class="dropdown-item">Construction</a>
							<a asp-controller="Services" asp-action="FabsCorControl" class="dropdown-item">Fabrication & Corrosion Control</a>

						</div>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Projects">Projects</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Clients">Clients</a>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link" dropdown-toggle id="dropdownMenuOpBase" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button">Operation base<span class="caret"></span></a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuOpBase">
							<a asp-controller="OperationBase" asp-action="Index" class="dropdown-item">Our base</a>
							<a asp-controller="OperationBase" asp-action="FabricationYard" class="dropdown-item">Fabrication yard</a>
							<a asp-controller="OperationBase" asp-action="Equipment" class="dropdown-item">Equipment</a>
						</div>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link" dropdown-toggle id="dropdownMenuHSE" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" type="button">HSE<span class="caret"></span></a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuHSE">
							<a asp-controller="HSE" asp-action="Index" class="dropdown-item">HSE</a>
							<a asp-controller="HSE" asp-action="PolicyManagement" class="dropdown-item">Policy managment</a>
							<a asp-controller="HSE" asp-action="HSEManagementProcess" class="dropdown-item">HSE managment process</a>
						</div>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Gallery">Gallery</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact us</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<div>
		@RenderBody()
	</div>

	<section class="footer">
		<!-- site footer -->
		<footer id="site-footer">
			<div class="top-footer">
				<div class="container my-md-5 my-4">
					<div class="row">
						<div class="col-lg-4">
							<div class="footer-logo mb-3">
								<a href="index.html">
									<span class="fa fa-shield"></span> DOUGUST-M
								</a>
							</div>
							<div>
								<p class="">
									Lorem ipsum dolor, sit amet consectet et adipis icing elit. Ab commodi iure minus
									laboriosam
									placeat quia, dolorem animi. Eveniet repudiandae, perferendis nesciunt deserunt iure et, consequatur
									optio!
								</p>
							</div>
						</div>
						<!-- Quick Links -->
						<div class="col-lg-3 col-md-4 mt-lg-0 mt-5">
							<h4 class="footer-title">Quick Links</h4>
							<ul class="footer-list">
								<li><a href="about.html"> About company</a></li>
								<li><a href="services.html"> Explore services</a></li>
								<li><a href="#work"> How does we Work?</a></li>
								<li><a href="#projects"> View projects</a></li>
							</ul>
						</div>
						<!-- Newsletter -->
						<div class="col-lg-5 col-md-8 mt-lg-0 mt-5">
							<h4 class="footer-title">Newsletter</h4>
							<p class="mb-4">
								By subscribing to our mailing list you will always be updated with the latest news from us.
							</p>
							<form class="newsletter-form">
								<input class="input-rounded" type="text" required="" placeholder="Enter Email Address">
								<button type="submit" title="Subscribe" class="btn btn-primary btn-style" name="submit" value="Submit">
									Subscribe
								</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- //site footer -->
			<!-- move top -->
			<button onclick="topFunction()" id="movetop" class="bg-primary" title="Go to top">
				<span class="fa fa-angle-up"></span>
			</button>
		</footer>
		<div class="pt-5 pb-0"><p class="text-center">© DOUGUST-M - @DateTime.Now.Year All Rights Reserved</p></div>
	</section>
</body>
</html> 
